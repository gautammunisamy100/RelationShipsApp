<% include partials/header %>
 
    <div class="row">
       <div class="col-md-8" >
          <h1>  List of People Relationship</h1>
       </div> 
       <div class="col-md-4">
              <input class="form-control mr-sm-2" type="text" id="myInput" onkeyup="Search()"  placeholder="Search Below Table" aria-label="Search">
        </div> 
    </div>
    <div class="row">  
    <table class="table table-bordered">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Relationship</th>
      <th scope="col">To</th>
      <th scope="col">Edit/Delete</th>
    </tr>
    </thead>
    <tbody>
     <% for(var i = 0;i<relationList.length; i++){ %>
    <tr >
      <td><%=i+1 %></td>
      <td><%=relationList[i].ForName%></td>
      <td><%=relationList[i].Realtionship%></td>
      <td><%=relationList[i].ToName%></td>
      <td>
      <a  href="edit/<%=relationList[i].ForName%>/<%=relationList[i].ToName%>/<%=relationList[i].Realtionship%>" >Edit </a>
      <a  href="delete/<%=relationList[i].ForName%>/<%=relationList[i].ToName%>/<%=relationList[i].Realtionship%>" >Delete</a>
      </td>
    </tr>
     <% } %>
    </tbody>
    </table>
    </div>

    
<% include partials/footer %>
<script src="/javascript/homepageSearch.js"></script>